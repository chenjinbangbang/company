/* pages/articles/articles.wxss */

.noData {
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
}

.articles {
  background-color:#fff;
  border-bottom: 1px solid #ddd;
  display: flex;
  align-items: center;
}

.articles .articles-img {
  flex: 2;
  display: flex;
  padding: 40rpx 10rpx 20rpx 10rpx;
}

.articles .articles-img image {
  width: 300rpx;
  height: 200rpx;
}

.articles .articles-detail {
  flex: 3;
  font-size: 32rpx;
  padding: 10rpx;
}

.articles .articles-detail .title {
  margin-top: 20rpx;
}

.articles .articles-detail .price {
  margin: 20rpx 0;
  color: #f00;
}
